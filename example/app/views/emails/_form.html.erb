<%= form_for([@person, @email]) do |f| %>
  <div class="form-inline mb-3">
    <div class="form-group mr-4">
      <span class="mr-4">Email:</span> <%= f.text_field :email, required: true, class: "form-control", placeholder: "example@email.com" %><br />
    </div>
    <div class="form-group">
      <%= f.submit "Add email", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>