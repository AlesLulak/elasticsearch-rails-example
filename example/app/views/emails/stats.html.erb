<h1 class="mt-3">Sent emails</h1>
<%= link_to 'List', persons_path, class: "btn btn-warning" %>
<%= link_to 'Search', search_path, class: "btn btn-warning" %>

<div class="row">
  <div class="">

  </div>
</div>


<div class="row">
  <div class="col-md-6">
    <h2 class="mt-3">Emails:</h2>
    <ul class="list-group mt-3 mb-1">
      <li class="list-group-item font-weight-bold bg-info text-white">
        <div class="row">
          <div class="col">
            <a href="<%= (params[:email] == "desc" || params[:email].nil?) ? stats_path(email: "asc", domain_address: params[:domain_address], domain_count: params[:domain_count]) : stats_path(email: "desc", domain_address: params[:domain_address], domain_count: params[:domain_count]) %>" class="text-white">
              Email
              <i class="fa <%= @email_icon %>" aria-hidden="true"></i>
            </a>
          </div>
          <div class="col">
            <a href="<%= (params[:email_count] == "desc" || params[:email_count].nil?) ? stats_path(email_count: "asc", domain_address: params[:domain_address], domain_count: params[:domain_count]) : stats_path(email_count: "desc", domain_address: params[:domain_address], domain_count: params[:domain_count]) %>" class="text-white">
              Count (<%= @sum %>)
              <i class="fa <%= @email_count_icon %>" aria-hidden="true"></i>
            </a>
          </div>
        </div>
      </li>
    </ul>
    <ul class="list-group mb-3 stats">
      <% @emails.each do |e| %>
      <li class="list-group-item">
        <div class="row">
          <div class="col">
            <span><%= e.address %> </span>
          </div>
          <div class="col">
            <span><%= e.count %></span>
          </div>
        </div>
      </li>
      <% end %>
    </ul>
  </div>

  <div class="col-md-6">
    <h2 class="mt-3">Domains:</h2>
    <ul class="list-group mt-3 mb-1">
        <li class="list-group-item font-weight-bold bg-info text-white">
          <div class="row">
            <div class="col">
              <a href="<%= (params[:domain_address] == "desc" || params[:domain_address].nil?) ? stats_path(domain_address: "asc", email: params[:email], email_count: params[:email_count]) : stats_path(domain_address: "desc", email: params[:email], email_count: params[:email_count]) %>" class="text-white">
                Domain
                <i class="fa <%= @domain_icon %>" aria-hidden="true"></i>
              </a>
            </div>
            <div class="col">
              <a href="<%= (params[:domain_count] == "desc" || params[:domain_count].nil?) ? stats_path(domain_count: "asc", email: params[:email], email_count: params[:email_count]) : stats_path(domain_count: "desc", email: params[:email], email_count: params[:email_count]) %>" class="text-white">
                Count (<%= @sum %>)
                <i class="fa <%= @domain_count_icon %>" aria-hidden="true"></i>
              </a>
            </div>
          </div>
        </li>
      </ul>
    <ul class="list-group mb-3 stats">
      <% @domains.each do |e| %>
      <li class="list-group-item">
        <div class="row">
          <div class="col">
            <span><%= e.domain %> </span>
          </div>
          <div class="col">
            <span><%= e.count %></span>
          </div>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>